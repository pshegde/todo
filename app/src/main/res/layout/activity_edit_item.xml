<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.secondapp.todoapp.EditItemActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_text_save"
        android:id="@+id/btnEditText"
        android:singleLine="false"
        android:onClick="onSave"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etPriority"
        android:layout_alignStart="@+id/etPriority" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit item below:"
        android:id="@+id/tvEditText"
        android:textSize="@dimen/tvEditText_size"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/etEditText"
        android:layout_alignEnd="@+id/etEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etEditText"
        android:singleLine="false"
        android:layout_below="@+id/tvEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_text_cancel"
        android:id="@+id/button"
        android:layout_alignTop="@+id/btnEditText"
        android:layout_toRightOf="@+id/btnEditText"
        android:layout_toEndOf="@+id/btnEditText"
        android:singleLine="true"
        android:onClick="onCancel" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_edit_priority"
        android:layout_below="@+id/etPriority"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_text_textview_priority"
        android:id="@+id/etPriority"
        android:textSize="@dimen/tvEditText_size"
        android:layout_below="@+id/etEditText"
        android:layout_alignLeft="@+id/tvEditText"
        android:layout_alignStart="@+id/tvEditText" />

</RelativeLayout>
